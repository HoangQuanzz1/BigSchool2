
@model IEnumerable<lap3_TranHoangQuan_BigSchool.Models.Course>

@{
    ViewBag.Title = "Home Page";
}
<div class=" row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <div class="Lecurer">
                        @course.Lecturer.Name
                    </div>
                    <div class="category">
                        @course.Category.Name
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

